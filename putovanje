#include <iostream>
#include "dinstring.hpp"
#include "list.hpp"

using namespace std;

class Karta{
private:
    DinString mestopolaska;
    DinString mestodolaska;
    float duzinaputovanja;
    float cenakarte;
    int id;

public:
    Karta(){
        mestopolaska="Novi Sad";
        mestodolaska="Beograd";
        duzinaputovanja=0;
        cenakarte=0;
        id=0;
    }

    Karta(DinString a, DinString b, float c, float d, int e){
        mestopolaska=a;
        mestodolaska=b;
        duzinaputovanja=0;
        if(c>0)
            duzinaputovanja=c;
        cenakarte=0;
        if(d>0)
            cenakarte=d;
        e=id;
    }

    virtual bool jeftinaKarta(){
        if(cenakarte>10)
            return false;
        return true;
    }

    DinString getMestopolaska(){
        return mestopolaska;
    }

    DinString getMestodolaska(){
        return mestodolaska;
    }

    float getDuzinaputovanja(){
        return duzinaputovanja;
    }

    float getCenakarte(){
        return cenakarte;
    }

    int getId(){
        return id;
    }
};

class AvionskaKarta{
private:
    DinString nazivputovanja;
    int maxcena;
    List<AvionskaKarta> listakarti;

public:
    AvionskaKarta(){
        nazivputovanja="Primer";
        maxcena=1000;
    }

    AvionskaKarta(DinString a, int b){
        nazivputovanja=a;
        maxcena=0;
        if(b>0)
            maxcena=b;
    }

    DinString getNazivputovanja(){
        return nazivputovanja;
    }

    int getMaxcena(){
        return maxcena;
    }

    bool dodajKartu(AvionskaKarta &p){
        listakarti.add(1,p);
    }

    bool izbaciKartu(int a){
        listakarti.remove(a);
    }

    void ispisi(){
        cout<<maxcena<<endl;
        cout<<nazivputovanja<<endl;
        if(bool jeftinaKarta()){
        cout<<"test"<<endl;
        }
    }
};

int main()
{
    cout << "Hello world!" << endl;
    return 0;
}
